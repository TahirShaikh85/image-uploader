{{!-- start section --}}
<section class="section my-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>Node Image Uploader</h1>
            <p class="subtitle">Upload Image to the <strong>Server</strong></p>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/uploadmultiple" enctype="multipart/form-data" method="post">
                <div class="row">
                    <div class="col-8">
                        <input type="file" name="images" class="form-control"  id="formFile" multiple>
                    </div>
                    <div class="col-2">
                        <input type="submit" value="Upload images" class="btn btn-warning">
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</section>
{{!-- end section --}}

{{!-- display images --}}
<section class="mt-5">
    <div class="container">
    <div class="row">
        {{#each images}}
            {{#each this}}
                {{#if imageBase64}}
                    <div class="col-3 mx-1">
                        <div class="card shadow" style="width: 18rem;">
                            <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top img-fluid" alt="...">
                            <div class="card-body">
                                <h5 class="card-title font-poppins">UI/UX Design</h5>
                                <p class="text-secondary font-size-09">Lorem ipsum dolor sit amet consectetur adipisicing elit. Unde dolor officiis labore! Doloremque corporis suscipit animi dolorum nisi nemo mollitia?</p>
                                <a href="#" class="text-light btn btn-info font-size-09">Read More</a>
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        {{/each}}
    </div>
    </div>
</section>
{{!-- end display images --}}